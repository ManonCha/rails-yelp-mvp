<h1>All the restaurants</h1>

<ul>
    <% @restaurants.each do |resto| %>
      <li><strong><%= resto.name %></strong>
          <%= link_to "See details", restaurant_path(resto.id), class: "btn btn-primary" %>
      </li>
    <% end %>
</ul>

<%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-primary" %>
